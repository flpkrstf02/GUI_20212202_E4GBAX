<Window x:Class="GUI_20212202_E4GBAX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_20212202_E4GBAX"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.Background>
            <ImageBrush x:Name="img" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Content="New Game" Padding="10" Margin="0,50,0,0" Height="50" Width="150" Command="{Binding StartGameCommand}"/>
            <Button Content="Load Game" Padding="10" Margin="0,20,0,0" Height="50" Width="150" Command="{Binding StartGameCommand}"/>
            <Button Content="Quit" Padding="10" Margin="0,20,0,0" Height="50" Width="150" Command="{Binding StartGameCommand}"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            
        </StackPanel>
    </Grid>
</Window>
